.items {
  border-top-width: var(--hairline-width);
  border-top-color: var(--content-divider-color);

  border-bottom-width: var(--hairline-width);
  border-bottom-color: var(--content-divider-color);
}

.header {
  padding-top: 16px;
  padding-bottom: 7.5px;

  padding-left: 15px;
  padding-right: 15px;

  &__text {
    font-size: 13px;
    color: var(--content-text-light-color);
    letter-spacing: -0.05px;
  }
}

.footer {
  padding-top: 7.5px;
  padding-bottom: 7.5px;

  padding-left: 15px;
  padding-right: 15px;

  &__text {
    font-size: 13px;
    color: var(--content-text-light-color);
    letter-spacing: -0.05px;
  }
}
